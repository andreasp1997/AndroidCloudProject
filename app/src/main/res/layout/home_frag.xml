<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:fitsSystemWindows="true"
    android:background="#E8E8E8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:columnCount="1"
            custom:rowCount="2"
            >

            <android.support.v7.widget.CardView

                custom:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                custom:layout_columnWeight="1"
                custom:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                custom:cardElevation="8dp"
                custom:cardCornerRadius="8dp"
                custom:layout_column="0"
                custom:layout_row="0">

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textSteps"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="#57BC90"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's Steps" />

                    <com.github.lzyzsd.circleprogress.ArcProgress
                        android:id="@+id/distance_progress"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="56dp"
                        custom:arc_bottom_text="Goal:"
                        custom:arc_bottom_text_size="20dp"
                        custom:arc_finished_color="#57BC90"
                        custom:arc_stroke_width="25dp"
                        custom:arc_text_color="#57BC90"
                        custom:arc_suffix_text=""

                        custom:arc_unfinished_color="#C8C8C8" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/edit_steps_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:clickable="true"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                custom:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                custom:layout_columnWeight="1"
                custom:layout_rowWeight="2"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                custom:cardElevation="8dp"
                custom:cardCornerRadius="8dp"
                >

                <ImageButton
                    android:id="@+id/edit_calories_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/textWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="#57BC90"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textWeightVal"
                    android:paddingTop="56dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#9b9b9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------" />

                <TextView
                    android:id="@+id/textHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="97dp"
                    android:gravity="center"
                    android:text="Height"
                    android:textColor="#57BC90"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textHeightVal"
                    android:paddingTop="138dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#9b9b9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------" />

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="179dp"
                    android:gravity="center"
                    android:text="Gender"
                    android:textColor="#57BC90"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textGenderVal"
                    android:paddingTop="220dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#9b9b9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------" />

                <TextView
                    android:id="@+id/textAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="261dp"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="#57BC90"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textAgeVal"
                    android:paddingTop="302dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#9b9b9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------" />
                
                <TextView
                    android:id="@+id/textCal"
                    android:paddingTop="343dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#58BC90"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Calorie Intake" />

                <TextView
                    android:id="@+id/textCalVal"
                    android:paddingTop="384dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#9b9b9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------" />


            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>